<section class="login">
    <div class="login-header">
        <h1>Login</h1>
    </div>
    <form class="login-form">
        <div>
            <label for="username-login">Username:</label>
            <input type="text" id="username-login" placeholder="Enter Username"/>
        </div>
        <div>
            <label for="password-login">Password:</label>
            <input type="password" id="password-login" placeholder="Enter Password"/>
        </div>
        <div>
            <button id="comment-button" type="submit">Login</button>
        </div>
    </form>
    <a href="/signup" id="comment-button" type="submit">Sign Up!</a>
</section>

<script src="/javascript/login.js"></script>